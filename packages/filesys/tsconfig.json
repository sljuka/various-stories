{
  "include": ["./src"],
  "exclude": ["node_modules", "**/*.spec.ts", "./lib"],
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "suppressExcessPropertyErrors": true,
    "declaration": true,
    "outDir": "lib",
    "strictNullChecks": false,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "jsx": "react",
    "esModuleInterop": true,
    "target": "es6",
    "module": "commonjs",
    "lib": ["dom", "es6"]
  }
}
